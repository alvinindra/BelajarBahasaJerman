<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

	    <ImageView
	        android:id="@+id/quiztitle"
	        android:layout_width="195.500dp"
	        android:layout_height="195.500dp"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/quiz_title"
	        android:contentDescription="@string/descimg" />

	    <Button
	        android:id="@+id/btnMulai"
	        android:layout_width="176dp"
	        android:layout_height="56dp"
	        android:layout_below="@+id/quiztitle"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="33dp"
	        android:background="@drawable/quiz_mulai"
	        android:contentDescription="@string/btndesc" />

	    <Button
	        android:id="@+id/btnback4"
	        android:layout_width="55dp"
	        android:layout_height="55dp"
	        android:layout_below="@+id/btnMulai"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="16dp"
	        android:background="@drawable/back" />
	    
	</RelativeLayout>
</LinearLayout>