<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/QuizRL1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

	    <ImageView
		    android:id="@+id/quiztitle"
		    android:layout_width="195.500dp"
		    android:layout_height="195.500dp"
		    android:layout_marginTop="35dp"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/quiz_title"
		    android:contentDescription="@string/descimg" />
	    <Button
	        android:id="@+id/btnMulai"
	        android:layout_marginTop="25dp"
	        android:layout_width="220dp"
	        android:layout_height="70dp"
	        android:layout_below="@+id/quiztitle"
	        android:layout_centerHorizontal="true"
	        android:contentDescription="@string/btndesc"
	        android:background="@drawable/quiz_mulai" />
	
	    <Button
	        android:id="@+id/btnback4"
	        android:layout_width="55dp"
	        android:layout_height="55dp"
	        android:layout_below="@+id/btnMulai"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:background="@drawable/back" />
	    
	</RelativeLayout>
</RelativeLayout>